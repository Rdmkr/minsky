{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@minsky/menu": ["libs/menu/src/index.ts"],
      "@minsky/shared": ["libs/shared/src/index.ts"],
      "@minsky/minsky-server": ["libs/minsky-server/src/index.ts"],
      "@minsky/shared-ui": ["libs/shared-ui/src/index.ts"],
      "@minsky/core": ["libs/core/src/index.ts"],
      "@minsky/deepcore": ["libs/deepcore/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
